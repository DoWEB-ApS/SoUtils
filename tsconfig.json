{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ESNext"],
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "src/**/*.js",
    "tests/**/*.spec.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}
